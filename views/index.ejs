    <section class="filter-section">
        <h2>bewaarde huizen</h2>

        <form action="/" method="get" class="zoekvak">
            <label for="city" class="white-text">zoek op plaatsnaam
                <input type="search" name="city" class=""><!--ik zeg nu ga zoeken en als name geef ik mee dat het id is en dat daar op gezocht word-->
            </label>
            <button type="submit" class="submit-searchbutton styling-filterbutton ">zoeken</button>
        </form>
            <p class="">Gebruik de zoekfunctie om de stad op te zoeken let  erop dat alles staat zoals in de database</p>

        <% datahouse.forEach(function(person)

        {
        %>
        <p>gevonden zoekresultaten:</p>
            <ul>


                <li class="">
                    <%= person.id %> id en address: <a href="./person/<%= person.id %>">   naam: <%= person.id %>
                        <%= person.street %>
                        <%= person.house_nr %>
                        <%= person.city %>
                    </a>

                </li>
            </ul>

        <% }); %>

        <label for="filters">kies waar je op wilt filteren:</label>

        <label for="filters"></label><select id="filters">
            <option value="bewaardatum">bewaardatum</option>
            <option value="prijs">prijs</option>
            <option value="adress">adress</option>
            <option value="datum">datum</option>
        </select>
    </section>
        <% persons.forEach(person => { %>
          <div class="list-houses">
              <ul class="">
              <li><a href="./person/<%= person.id %>"><%= person.street%><%= person.house_nr%></a></li>
                    <li><%= person.postal_code %> <%= person.city %></li>
                  <li class="beschrijving"><%= person.price %> kk </li>
                    <li><%= person.m2 %> oppperavlakte <%= person.rooms %> kamers</li>
                    <li>mijn notities</li>
                    <li><%= person.m2_garden %> tuin</li>
                    <li><%= person.listed_date %> datum</li>
                    <li><%= person.id %> id</li>
                    <li><span class="beschrijving">beschirjving</span><%- person.description %> </li>
              </ul>
              <section>
                  <h2>score</h2>
                  <ul>
                      <li>algmeen
                          <input type="range" min="1" max="100" value="50" class="slider" id="myRange">
                          <p>Value: <span id="demo"></span></p></li>
                      <li>keuken             <input type="range" min="1" max="100" value="0" class="slider" id="keuken">
                          <p>Value: <span id="keukenvalue"></span></p></li>

                      <li>badkamer             <input type="range" min="1" max="100" value="0" class="slider" id="badkamer">
                          <p>Value: <span id="badkamervalue"></span></p></li>


                      <li>tuin            <input type="range" min="1" max="100" value="0" class="slider" id="tuin">
                          <p>Value: <span id="tuinvalue"></span></p></li>


                      <li>prijs            <input type="range" min="1" max="100" value="0" class="slider" id="prijs">
                          <p>Value: <span id="prijsvalue"></span></p></li>
                      <li>ligging             <input type="range" min="1" max="100" value="0" class="slider" id="ligging">
                          <p>Value: <span id="liggingvalue"></span></p></li>
                      <li>oppervlakte            <input type="range" min="1" max="100" value="0" class="slider" id="oppervlakte">
                          <p>Value: <span id="oppervlaktevalue"></span></p></li>
                  </ul>
              </section>
          </div>


        <% }) %>

        </ul>
    </div>

    </div>



</main>
